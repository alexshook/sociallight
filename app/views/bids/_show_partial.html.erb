<% unless current_user == @user %>
  <p>Add Bid!</p>
  <%= form_for @new_bid, remote: true do %>
    <%= f.label :comment %>
    <%= f.text_field :comment %>
    <%= f.submit "Commit bid"%>
  <% end %>
<% end %>

<% @bids.each do |bid| %>
<div id="all-bids">
  <% bidder = bid.user %>
    <%= link_to bidder do %>
      <%= bidder.name %>
      <img src="<%= bidder.profile_photo %>">
    <% end %>

<% if @user == current_user %>
  <button id="message-user">Message this user!</button>
<% end %>


