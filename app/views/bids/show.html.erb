
<%= link_to @bidder do %>
<%= @bidder.name %>
<img src="<%= @bidder.profile_photo %>">
<% end %>
<%= @bid.comment %>
bid on
<%= link_to @auction do %>
<%= @auction.title %>
<%= @auction.calculate_time_left %>
<img src="<%= @auction.img_url %>">
<% end %>
