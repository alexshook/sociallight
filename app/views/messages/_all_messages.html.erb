<% if current_user %>
    <div id='all-messages'>

      <% Message.where(sender_id: current_user.id).each do |message| %>
        <div class='message-info'>
          <% bidder = User.find(message.receiver_id) %>
            <%= link_to bidder do %>
              <div class='message-user-info'>
                <img width="40px" height="40px" src="<%= bidder.profile_photo %>">
                <%= bidder.name %>
              </div>
            <% end %>
            <%= link_to [current_user,message] do %>
              <div class='message'>
               <!--  <%= message.created_at.strftime("%D%H") %> -->
                <!-- add limit to amount of text displayed -->
                <p> <%= message.content %>

                Message Back <p>
              </div>
            <% end %>
        </div>
      <% end %>
    </div>
  <% end %>


