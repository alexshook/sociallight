<%= form_for [current_user, @new_message], method: :post, remote: true do |f| %>

  <%= f.label :auction_id %>
  <% auctions = current_user.auctions.each{|auction|auction.title}%>
  <%= f.select :auction_id, auctions  %>

  <%= f.label :receiver_id %>
  <%= f.number_field :receiver_id%>


  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.submit "Send it!" %>

<% end %>
