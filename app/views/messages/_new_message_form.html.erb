<%= form_for [current_user, @new_message], method: :post, remote: true do |f| %>

  <%= f.label :auction_id %>
  <%= f.select :auction_id, Auction.where(user: current_user).collect {|auction| [auction.title,auction.id]}  %>

  <%= f.label :receiver_id %>
  <%= f.select :receiver_id, @bidders.each {|bidder| [bidder.name, bidder.id]} %>
 <%= @bidders %>
  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.submit "Send it!" %>

<% end %>


