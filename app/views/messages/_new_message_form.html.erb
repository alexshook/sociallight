<%= form_for [@new_message, current_user], remote: true do |f| %>

  <%= f.label :auction_id %>
  <%= f.select :auction_id, current_user.auctions %>

  <%= f.label :bid_id %>
  <%= f.select :bid_id, current_user.auctions.bids %>


  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.submit "Send it!" %>

<% end %>
