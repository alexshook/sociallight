<h1>Auctions</h1>
<%= link_to 'Search Auctions by Location', new_search_path %>
<h3> Sort By </h3>
<nav id="auctions-index-nav">

  <li>Title</li>
  <li>Location</li>
  <li>Category</li>
  <li>Created At</li>
  <li>End Time</li>
</nav>

<div id="auctions-container">
 <% @auctions.each do |auction| %>


  <div class="auction">


      <a href="/auctions/<%= auction.id %>">
      <h3> Title: <%= auction.title %> </h3>
      </a>

      <div id="auctions-end">
      <h4>Auction End:</h4>
      <div id="DateCountdown" data-date="<%= auction.time_end %>" style="width: 400px;"></div>
      </div>
      Description:<%= auction.description[0..100] %>
      <br>
      Category:<%= Category.find(auction.category_id).title %>
      <br>

      <br>
  </div>

<% end%>
</div>

