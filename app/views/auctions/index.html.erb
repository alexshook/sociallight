<h1>Auctions</h1>
<%= link_to 'Search Auctions by Location', new_search_path %>
<h3> Sort By </h3>
<nav id="auctions-index-nav">
  <li>Title</li>
  <li>Location</li>
  <li>Category</li>
  <li>Created At</li>
  <li>End Time</li>
</nav>

<div id="auctions-container">
 <% @auctions.each do |auction| %>
 <%= link_to auction do %>
  <div class="auction">
    <!-- why are all of these in here -->
 <!--      <%= auction.title %><%= auction.description[0..100] %><%= auction.category_id %>
      <%= auction.title %><%= auction.description[0..100] %>
      <%= auction.category_id %> -->
      <!-- end -->
    <br>
      Title: <%= auction.title %>
      <%= auction.time_end %>
      <%= auction.time_begin %>
      <br>
      Description:<%= auction.description[0..100] %>
      <br>
      Category:<%= Category.find(auction.category_id).title %>
      <div class="auctions-timer"><!-- COUNTDOWN --></div>
      <br>
  </div>
<% end%>
<% end%>
</div>
<div id="DateCountdown" data-date="2015-01-14 00:00:00" style="width: 600px;"></div>
