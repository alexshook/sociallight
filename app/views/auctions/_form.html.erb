<%= javascript_include_tag 'auctions' %>

<div class="form-group auction-create-form">
  <div class="col-sm-6 space-bottom">
    <%= form_for @auction do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      <br>
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control', rows: '3' %>
      <br>
      <%= f.label :address %>
      <%= f.text_field :address, class: 'form-control' %>
      <br>
      <%= f.label :category_id %>
      <%= f.select :category_id, Category.all.collect {|category| [category.title,category.id]}, class: 'form-control' %>
      <br>
      <%= f.label :img_url %>
      <%= f.text_field :img_url, class: 'form-control', placeholder: "optional" %>
      <br>
      <%= f.label :website %>
      <%= f.url_field :website, class: 'form-control', placeholder: "optional" %>
      <br>
      <!-- begin bootstrap datetimepicker -->
      <%= f.label :event_date %>
      <%= f.datetime_field :event_date, id: 'datetimepicker1', class: 'form-control' %>
      <br>
      <%= f.label :auction_begin %>
      <%= f.datetime_field :time_begin,  id: 'datetimepicker2', class: 'form-control'%>
      <br>
      <%= f.label :auction_end %>
      <%= f.datetime_field :time_end, id: 'datetimepicker3', class: 'form-control', placeholder: 'All auctions end at 9PM on date chosen' %>
      <br>
      <!-- end bootstrap datetimepicker -->
      <br>
      <%= f.label :num_of_req_bids, "How many people are you looking for?" %>
      <%= f.number_field(:num_of_req_bids, in: 1..10, class: 'form-control') %>
      <br>
      <%= f.hidden_field :user_id, :value => current_user.id %>

      <%= button_tag(type: 'submit', class: 'btn btn-default') do %>
        Create Auction
      <% end %>

    <% end %>
  </div>

</div>
