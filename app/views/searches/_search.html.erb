<%= form_for @search do |f| %>
  <div class="field">
    <%= f.label :keywords %><br />
    <%= f.text_field :keywords %>
  </div>

  <div class="field">
    <%= f.label :distance %><br />
    <%= f.text_field :distance %>
  </div>

  <div class="field">
    <%= f.label :category_id %><br />
    <%= f.collection_select :category_id, Category.order(:title), :id, :title, include_blank: true %>
  </div>

  <div class="actions">
    <%= f.submit "Search" %>
  </div>

<% end %>
