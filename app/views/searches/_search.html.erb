<%= form_for @search do |f| %>
  <div class="field">
    <%= f.label :keywords, "Enter a city or zip code:" %><br />
    <%= f.text_field :keywords %>
  </div>

  <br />

  <div class="field">
    <%= f.label :category_id, "What are you interested in?" %><br />
    <%= f.collection_select :category_id, Category.order(:title), :id, :title %>
  </div>

  <br />

  <div class="field">
    <%= f.label :distance, "How far are you willing to travel? (in miles)" %><br />
    <%= f.text_field :distance %>
  </div>

  <br />

  <div class="actions">
    <%= f.submit "Search" %>
  </div>

<% end %>
