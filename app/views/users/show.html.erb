<div id='dashboard'>

  <div id="user-info">

    <img id="profile-photo" src="<%= @user.profile_photo %>">
    <h1 id="profile-name"><%= @user.name %></h1>
    <p id="profile-bio"> <%= @user.bio %> </p>
  </div>

  <div id="categories">
    <% @badges.each do |badge| %>
    <img id="badge-photo" src="<%= badge.badge_photo %>">
    <%end%>
  </div>

</div>

  <% if current_user? %>
    <div id="status-menu" >
      <nav>
        <li>HOME!!!!!!</li>
        <li>Bids<div class="unread-items" id="unread-bids"></div></li>
        <li>Auctions<div class="unread-items" id="unread-auctions"></div></li>
        <li>Messages<div class="unread-items" id="unread-messages"></div></li>
      </nav>

      <div id="notification-center">

          <div id="main-notifications">

          </div>

           <div id="bids-notifications">
              <% @bids.each do |bid| %>
                <%= @bid.created_at %><%= @bid.

          </div>

           <div id="auctions-notifications">
          </div>

           <div id="messages-notifications">
          </div>

      </div>

    </div>

  <%end%>

